  SUNDAY
  MONDAY
  SATURDAY
}

enum AttendanceType {
  VALIDATE
  WAITING
}

enum DanceRole {
  LEADER
  FOLLOWER
}

enum WorkspaceRole {
  OWNER
  TEACHER
  STUDENT
}

enum MemberStatus {
  ACTIVE
  DEACTIVATED
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum NotificationType {
  INVITATION_RECEIVED
  WORKSPACE_MEMBER_JOINED
  // Add other types as needed
